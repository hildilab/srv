mkdir "thumbs/famil"
mkdir "thumbs/minpr"
mkdir "thumbs/pdbid"
mkdir "thumbs/tmhel"

for f in famil minpr pdbid tmhel; do
 cd $f
 for i in *; do
  if [ -d $i ]; then
   echo $i
   mkdir "../thumbs/$f/$i"
   cd $i
   for bild in *.png; do
    convert "$bild" -resize 150x150 "../../thumbs/$f/$i/$bild"
   done
   cd ..
  fi
 done
 cd ..
done

for bild in *.png
do
 convert "$bild" -resize 150x150 "thumbs/$bild"
done

cd prop
for bild in *.png
do
 convert "$bild" -resize 150x150 "../thumbs/$bild"
done
cd ..
